---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Equipe';
const description = 'A Equipe que faz o Barzim.';
const permalink = `${Astro.site.href}equipe`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="equipe">
  <div class="container">
    <h1>Equipe</h1>
  </div>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
